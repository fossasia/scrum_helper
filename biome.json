{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "include": ["src/**/*.js", "docs/**"],
    "ignore": [
      "src/fontawesome/**",
      "src/materialize/**",
      "src/scripts/jquery-3.2.1.min.js",
      "src/scripts/materialize.min.js",
      "src/**/*.min.js"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
	"rules": {
		"complexity":{
			"noForEach": "off",
			"useOptionalChain": "off"
		},
		"style": {
			"useTemplate": "off",
			"noUnusedTemplateLiteral": "off",
			"noUselessElse":"off"
		}
	}
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "globals": [
      "chrome",
      "$",
      "jQuery",
      "Materialize",
      "window",
      "document",
      "console",
      "fetch",
      "alert",
      "setTimeout",
      "setInterval",
      "clearInterval",
      "MutationObserver",
      "Image"
    ],
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
