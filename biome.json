{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*.js",
			"docs/**",
			"!!src/fontawesome/",
			"!!src/materialize/",
			"!!src/scripts/jquery-3.2.1.min.js",
			"!!src/scripts/materialize.min.js",
			"!!src/**/*.min.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"complexity": {
				"noForEach": "off",
				"useOptionalChain": "off"
			},
			"style": {
				"useTemplate": "off",
				"noUnusedTemplateLiteral": "off",
				"noUselessElse": "off"
			}
		}
	},
	"javascript": {
		"globals": [
			"chrome",
			"$",
			"jQuery",
			"Materialize",
			"window",
			"document",
			"console",
			"fetch",
			"alert",
			"setTimeout",
			"setInterval",
			"clearInterval",
			"MutationObserver",
			"Image"
		],
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
