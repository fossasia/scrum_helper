{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"include": ["src/**/*.js", "docs/**"],
		"ignore": ["docs/images", "**/*.min.js", "src/icons", "src/materialize", "src/scripts/fontawesome.js"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "off",
				"noUnusedImports": "off",
				"noSwitchDeclarations": "off",
				"noUnreachable": "off",
				"noUnnecessaryContinue": "off"
			},
			"complexity": {
				"noForEach": "off",
				"useOptionalChain": "off",
				"useLiteralKeys": "off",
				"noUselessCatch": "off"
			},
			"style": {
				"useTemplate": "off",
				"useSingleVarDeclarator": "off",
				"noUnusedTemplateLiteral": "off",
				"noUselessElse": "off"
			},
			"suspicious": {
				"noDoubleEquals": "off",
				"noGlobalIsNan": "off",
				"noAsyncPromiseExecutor": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
